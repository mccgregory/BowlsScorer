<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/black" /> <!-- Background -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <size android:width="396dp" android:height="396dp" />
            <solid android:color="#00FF00" /> <!-- Green circle -->
        </shape>
    </item>
    <item>
        <shape android:shape="line">
            <stroke android:width="2dp" android:color="#FFFFFF" /> <!-- White lines -->
        </shape>
    </item>
</layer-list>