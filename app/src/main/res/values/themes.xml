<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Preload splash_background.png to match the Compose UI -->
        <item name="android:windowBackground">@drawable/splash_background</item>
        <!-- Force full-screen and hide status bar -->
        <item name="android:windowFullscreen">true</item>
        <!-- Remove system overlays -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Prevent window animations during transition -->
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>