<resources>
    <!-- Theme for SplashActivity -->
    <style name="SplashTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Set a solid black background to avoid flicker during SplashActivity transition -->
        <item name="android:windowBackground">@android:color/black</item>
        <!-- No need for SplashScreen API attributes (e.g., windowSplashScreenAnimatedIcon) since SplashActivity handles rendering -->
    </style>

    <!-- Default theme for the app (used by MainActivity) -->
    <style name="AppTheme" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Match the app's black UI background -->
        <item name="android:windowBackground">@android:color/black</item>
    </style>
</resources>